@{
  Layout = "_Layout";
}
<!--  loop -->
@if (@Model.Count != 0)
{
  <ul>
    @foreach (var specialty in @Model)
    {
      <li><a href='/specialties/@specialty.GetSpecialtyId()'>@specialty.GetSpecialtyName()</a> <br>  <a href="/specialties/@specialty.GetSpecialtyId()/update">Edit</a> | <a method="post" href="/specialties/@specialty.GetSpecialtyId()/delete">Delete</a></li>
    }
  </ul>
<hr>

<!--  -->
  <div class="btn btn-primary"><a href="/specialties/new">New Style</a></div>
  <hr>
  <form action="specialties/delete" method="post">
  <div class="btn btn-warning" type="submit">Delete</div>
  <div class="btn btn-danger" type="submit" class="btn btn-info">Delete All</div>
  </form>
