@{
  Layout = "_Layout";
}

<div class="container">
<h1>Edit Employees</h1>
<hr>
<h2>Edit: @Model.GetName()</h2>
<form action="/employees/@Model.GetId()/update" method="post">
  <label for="new-employee">New Style</label>
  <input id="new-employee" type="text" name="new-employee" value="@Model.GetName()">
  <div class="btn btn-success" type="submit">Update</div>
</form>
</div>
